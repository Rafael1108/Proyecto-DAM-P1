<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcercaDeActivity"
     >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_taller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:menu="@menu/menu_modulo"
        app:subtitleTextColor="@color/white"
        app:title="@string/app_title"
        app:titleTextColor="@color/white"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_uglogo" />

            <ImageView
                android:id="@+id/imgCarrera"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_softlogo" />
            <TextView
                android:id="@+id/txtMateria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="DESARROLLO APLICACIONES MÓVILES"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SOF-S-NO-8-6"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtProfesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="M.Sc. Charco A. Jorge Luis"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtIntegrantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="INTEGRANTES GRUPO 7"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtC1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Basurto C. Edgar"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtC2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Espinoza de los Monteros Víctor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtC3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Gutiérrez L. Dennis"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtC4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Larrea B. Edwin"
                android:textSize="18sp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp">
            <TextView
                android:id="@+id/txtModulos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ACERCA DE LOS MÓDULOS"
                android:textStyle="bold"
                android:textSize="25sp" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center">

                <ImageView
                    android:id="@+id/imgViewAprendizaje"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                     android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="onImgClick"
                    android:transitionName="M1"
                    app:srcCompat="@drawable/ic_aprendizaje" />

                <ImageView
                    android:id="@+id/imgViewAtencion"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="onImgClick"
                    android:transitionName="M2"
                    app:srcCompat="@drawable/ic_atencion" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imgViewPensamiento"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="onImgClick"
                    android:transitionName="M4"
                    app:srcCompat="@drawable/ic_pensamiento" />

                <ImageView
                    android:id="@+id/imgViewPercepcion"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="onImgClick"
                    android:transitionName="M3"
                    app:srcCompat="@drawable/ic_percepcion"/>



            </TableRow>

        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>